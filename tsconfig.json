{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./",
    "lib": ["es2019"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@api/*": ["source/api/*"],
      "@request/*": ["source/request/*"],
      "@response/*": ["source/response/*"]
    }
  },
  "exclude": ["node_modules"]
}
